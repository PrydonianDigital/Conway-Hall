<?xml version='1.0'?>
<panorama>

	<parameters>
	
	panoName=assets/mov/1
	panoType=mov

	panHome = 100
	tiltHome = -5

	zoomMax = 1.3
	zoomMin = 0.5
	zoomHome = 0.8

	qualityMotion = medium
	qualityStatic = medium
	segments=20
	sensitivity=100

	loaderTextColor = #FFFFFF
	loaderBackColor = #FFFFFF
	loaderText = 

	layer_1 = assets/swf/hotspots.swf
	layer_2 = assets/swf/glassMeterPanaround.swf
	layer_3 = assets/swf/autorotator.swf
	layer_5 = assets/swf/limits.swf
	layer_6 = assets/swf/movDecoder.swf
	layer_7 = assets/swf/fppcursor.swf
	layer_8 = assets/swf/tooltips.swf
	layer_9 = assets/swf/borders.swf

	</parameters>
	
	<FPPCursor>
		smooth=auto
		minFps=12
		externalCursors=false
		iconNormal=assets/img/cursors/normal.png
		iconMove=assets/img/cursors/move.png
		iconPress=assets/img/cursors/press.png
		snapAngle=true
		snapSteps=45
		minMovement=2
		horizontalOnly=true
		maxAngle=50
	</FPPCursor>

	<tooltips>
		altFont=Helvetica
		altSize=12
		altColor=0xffffff
		altFill=0x333333   
		altStroke=0x333333
		altAlpha=0.7
		altYOffset = -50
		altXOffset = -40
	</tooltips>
	
	<limits> 
	tilt_min = -65      
	tilt_max = 360
	</limits>  
	
	<borders> 
	pan_min = -360      
	pan_max = 360
	</borders>  
	
   <autorotator>
        speed = 0.3
        interval = 30
        pause = 3000
        quality = medium
    </autorotator> 

	<hotspots>
	
	<global 
	
	LocalConnectionID="localconnect"
	ExternalInterfaceID="myid"
	
	onDeactivate="" onActivate=""

	onStart = "loadBG();"
	
	loadBG = " 
	nav.visible=1;
	nav.staticY=-25,300;
	nav.alpha=1,300;
	timer+=1,600,,loadButtons
	
	"
	
	loadButtons = " 
	
	fullscreen_hover.visible=1;
	zoom_in_hover.visible=1;
	zoom_out_hover.visible=1;
	auto_rotate_on_hover.visible=1;
	auto_rotate_off_hover.visible=1;
	
	fullscreen.visible=1;
	zoom_in.visible=1;
	zoom_out.visible=1;
	auto_rotate_on.visible=1;
	
	fullscreen.alpha=1,300;
	zoom_in.alpha=1,300;
	zoom_out.alpha=1,300;
	auto_rotate_on.alpha=1,300;

	"
	
	zoomOutOver="zoom_out_hover.alpha=1; zoom_out.alpha=0; "
	zoomOutAway="zoom_out_hover.alpha=0; zoom_out.alpha=1; "
	
	zoomInOver="zoom_in_hover.alpha=1; zoom_in.alpha=0; "
	zoomInAway="zoom_in_hover.alpha=0; zoom_in.alpha=1; "
	
	fullscreenOver="fullscreen_hover.alpha=1; fullscreen.alpha=0; "
	fullscreenAway="fullscreen_hover.alpha=0; fullscreen.alpha=1; "
	
	autorotateOnOver="auto_rotate_on_hover.alpha=1; auto_rotate_on.alpha=0; "
	autorotateOnAway="auto_rotate_on_hover.alpha=0; auto_rotate_on.alpha=1; "
	
	autorotateOffOver="auto_rotate_off_hover.alpha=1; auto_rotate_off.alpha=0; "
	autorotateOffAway="auto_rotate_off_hover.alpha=0; auto_rotate_off.alpha=1; "
	
	>


	<!--------------------------------------------------- GLOBAL --------------------------------------------->
	
	<spot id="copyright" visible="0" static="1" sAlign="LB" align="L" staticY="-10" depth="99" url="images/png/copyright.png" onClick="openUrl(http://www.panaround)"    />
	
	<!--------------------------------------------------- NAV BG --------------------------------------------->
	
	<box id="nav" visible="0" static="1" url="assets/img/ui/nav-bg.png" staticY="100" staticX="0" depth="2" buttonmode="0" distorted="0" sAlign="MB" alpha="0"    />

	
	<!--------------------------------------------------- ZOOM OUT --------------------------------------------->
	
	<box id="zoom_out" alpha="0"  visible="0" static="1" url="assets/img/buttons/zoom-out.png" staticY="-20" staticX="-20" depth="100" sAlign="MB" buttonmode="2" distorted="0" onPress="pano.zoomKey=-1,50" onRelease="pano.zoomKey=0" alt="zoom out" onOver="zoomOutOver()" onOut="zoomOutAway()" />
	
	<box id="zoom_out_hover" visible="0"   static="1" url="assets/img/buttons/zoom-out-hover.png" staticY="-20" staticX="-20" depth="100" sAlign="MB" buttonmode="2" distorted="0" onPress="pano.zoomKey=-1,50" onRelease="pano.zoomKey=0" alt="zoom out"  alpha="0" />
	
	<!--------------------------------------------------- ZOOM IN --------------------------------------------->
	
	<box id="zoom_in" visible="0" alpha="0" static="1" url="assets/img/buttons/zoom-in.png" staticY="-20" staticX="20" depth="100" sAlign="MB" buttonmode="2" distorted="0" onPress="pano.zoomKey=1,50" onRelease="pano.zoomKey=0" alt="zoom in" onOver="zoomInOver()" onOut="zoomInAway()"  />
	
	<box id="zoom_in_hover" visible="0"  static="1" url="assets/img/buttons/zoom-in-hover.png" staticY="-20" staticX="20" depth="100" sAlign="MB" buttonmode="2" distorted="0" onPress="pano.zoomKey=1,50" onRelease="pano.zoomKey=0" alt="zoom in" alpha="0"  />
	
	<!--------------------------------------------------- AUTO ROTATE OFF  --------------------------------------------->
	
	<box id="auto_rotate_off" visible="0" static="1" url="assets/img/buttons/auto-off.png" staticY="-20" staticX="65" depth="100" sAlign="MB" buttonmode="2" distorted="0"   onClick="external.autorotator.disabled+=1; pano.pan_v=0; pano.tilt_v=0; pano.zoom_v=0; auto_rotate_off.visible=0; auto_rotate_on.visible=1;" alt="auto rotate on" onOver="autorotateOffOver()" onOut="autorotateOffAway()"   />
	
	<box id="auto_rotate_off_hover" visible="0" static="1" url="assets/img/buttons/auto-off-hover.png" staticY="-20" staticX="65" depth="100" sAlign="MB" buttonmode="2" distorted="0"   onClick="external.autorotator.disabled+=1; pano.pan_v=0; pano.tilt_v=0; pano.zoom_v=0; auto_rotate_off.visible=0; auto_rotate_on.visible=1;" alt="auto rotate on"  alpha="0" />
	
	<!--------------------------------------------------- AUTO ROTATE ON  --------------------------------------------->
	
	<box id="auto_rotate_on" visible="0" static="1" url="assets/img/buttons/auto-on.png" staticY="-20" staticX="65" depth="100" sAlign="MB" buttonmode="2" distorted="0"   onClick="external.autorotator.disabled+=1; pano.pan_v=0; pano.tilt_v=0; pano.zoom_v=0; auto_rotate_off.visible=1; auto_rotate_on.visible=0;" alt="auto rotate off" alpha="0"  onOver="autorotateOnOver()" onOut="autorotateOnAway()"  />
	
	<box id="auto_rotate_on_hover" visible="0" static="1" url="assets/img/buttons/auto-on-hover.png" staticY="-20" staticX="65" depth="100" sAlign="MB" buttonmode="2" distorted="0"   onClick="external.autorotator.disabled+=1; pano.pan_v=0; pano.tilt_v=0; pano.zoom_v=0; auto_rotate_off.visible=1; auto_rotate_on.visible=0;" alt="auto rotate off" alpha="0"    />
	
	<!--------------------------------------------------- FULLSCREEN  --------------------------------------------->
	
	<box id="fullscreen" alpha="0"  visible="0" static="1" url="assets/img/buttons/fullscreen.png" staticY="-20" staticX="-65" depth="110" sAlign="MB" buttonmode="2" distorted="0" onClick="fullscreen()"  alt="full screen on & off" onOver="fullscreenOver()" onOut="fullscreenAway()" />
	
	<box id="fullscreen_hover" visible="0"   static="1" url="assets/img/buttons/fullscreen-hover.png" staticY="-20" staticX="-65" depth="110" sAlign="MB" buttonmode="2" distorted="0" onPress="pano.zoomKey=-1,50" onRelease="pano.zoomKey=0" alt="full screen on & off"  alpha="0" />
	

	    </global>
    </hotspots>
</panorama>